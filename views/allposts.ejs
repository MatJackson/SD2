<% include header %>
  
<div class="container text-center">
  <div class="row"> 
    <div class="col-sm-10">
            
      <header class="jumbotron">
        <div class="container">
          <h4>This Page Contains Every Posts Stored In the DB!</h4>
          <p>Amazing aren't we</p>
          <p>You can also post question below.</p>
          
          <form action="/post" method="POST">
            <p style = "text-align: left; font-size: 18px; font-weight: bold;" > Title </p>
            <input id="titlebox" class="form-control input-lg"  placeholder="Question... " name="title">
            <br>
            <p style = "text-align: left; font-size: 18px; font-weight: bold;" > Description </p>
            <textarea class="form-control input-lg"  placeholder="Enter description..." name="description"></textarea>
            <br>
            <button type="submit" value="submit" class="submit-post btn-sm">Submit</button>
          </form>	
        </div>
      </header>
                    
      <div class="row">
        <div class="text-left"> <p> Most Recent </p></div>
        <% post.reverse().forEach(function(post){ %>
        <div class="col-sm-3">
          <div class="well">
            <p><%= post.author.username %></p>
            <img src="bird.jpg" class="img-circle" height="55" width="55" alt="Avatar">
          </div>
        </div>
        
        <div class="col-sm-9">
          <div class="well text-left">
            <a href="/post/<%= post._id %>/user/<%= post.author.id %>" class="wraptxt"> <h5><%= post.title %></h5> </a>
            <p class="wraptxt"><%= post.description.substring(0,100)%>...</p>
            <p class="pull-right"><%= post.timePosted %></p>
        </div>
      </div>

      <%  }); %>
      </div>
             
    </div>
  </div>
</div>

  <% include footer %>

  </body>
</html>
