<!DOCTYPE html>
<html lang="en">
<head>
  <title>Metis</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/custom.css">
  <link rel="stylesheet" type="text/css" href="/css/login.css">
  <link rel="stylesheet" type="text/css" href="/css/allposts.css">
  <script src="login.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <style>    
    /* Set black background color, white text and some padding */

    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
  </style>
</head>

<body>

<% include navbar %>

<% include login %>
  
<div class="container text-center">
    <div class="row"> 
        <!-- <% include leftsidebar %> -->
        <div class="col-sm-10">
            <div class="row">
                <div class="text-left"> <p> <%= search %></p></div>
                <% searchRes.forEach(function(post){ %>
                  <div class="col-sm-3">
                    <div class="well">
                     <p><%= post.author.username %></p>
                     <img src="bird.jpg" class="img-circle" height="55" width="55" alt="Avatar">
                    </div>
                  </div>
                  <div class="col-sm-9">
                    <div class="well text-left">
                     <a href="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>" class="wraptxt"> <h5><%= post.title %></h5> </a>
                      <p class="wraptxt"><%= post.description.substring(0,100)%>...</p>
                      <p class="pull-right"><%= post.timePosted %></p>
                  </div>
                  </div>
                <%  }); %>
            </div>           
        </div>
    <div class="col-sm-2 well"> 
      
    <% include rightsidebar %>
      
    </div>
  </div>
</div>

<% include footer %>

</body>


</html>
