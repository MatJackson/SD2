

<% include header %>
  
<div class="container text-center">
    <div class="row"> 
        <div class="col-sm-10">
            <div class="row">
                <div class="text-left"> <p> <%= search %></p></div>
                <!-- loops through all found posts and posts them in div -->
                <% searchRes.forEach(function(post){ %>
                  <div class="col-sm-3">
                    <div class="well">
                     <p><%= post.author.username %></p>
                     <img src="bird.jpg" class="img-circle" height="55" width="55" alt="Avatar">
                    </div>
                  </div>
                  <div class="col-sm-9">
                    <div class="well text-left">
                     <a href="/post/<%= post._id %>/user/<%= post.author.id %>" class="wraptxt"> <h5><%= post.title %></h5> </a>
                      <p class="wraptxt"><%= post.description.substring(0,100)%>...</p>
                      <p class="pull-right"><%= post.timePosted %></p>
                  </div>
                  </div>
                <%  }); %>
            </div>           
        </div>
  </div>
</div>

<% include footer %>

</body>


</html>
