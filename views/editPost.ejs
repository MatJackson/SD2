<% include header %>

<div class="container" style="margin-top: 10px;">    

    <div class="col-md-6">
      <h3 style="text-align: center;">Edit: <strong> <%= post.title %> </strong></h3>
              
      <form action="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>?_method=PUT" method="POST">
        
        <div class="form-group">
          <br>
            <label style = "font-size: 18px;" >Title</label>
            <input class="form-control input-lg" name="post[title]" value="<%= post.title %>">
          </div>
          <div>
            <label style = "font-size: 18px;" for="questionDescription">Description</label>
            <textarea class="form-control input-lg" rows="5" name="post[description]"> <%= post.description %> </textarea>
          </div>
          <br>
            <button type="submit" value="submit" class="submit-post btn btn-primary" style="float:right; margin:10px;">Submit</button>
            <button class="btn btn-danger" style="float: right; margin:10px;">
              <a href="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>"></a>          
              Cancel
            </button>

      </form>
        
    </div>

  </div>
</div>

<% include footer %>

</body>


</html>
