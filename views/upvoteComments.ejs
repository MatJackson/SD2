<!--this part is for Up Vote in Comments -->
<div class="ui labeled button" tabindex="0">
  <% if(user !== null){ %>
    <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui green button">
    	<i class="thumbs up icon"></i> Like
    </a>
    <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui basic green left pointing label">
	 	<%= comment.like %>
    </a>
  <% } else{ %>
    <a href="#" id="nonUser" class="ui green button">
    	<i class="thumbs up icon"></i> Like
    </a>
    <a href="#" id="nonUser" class="ui basic green left pointing label">
    	<%= comment.like %>
    </a>
  <% } %>
</div>