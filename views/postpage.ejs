<!DOCTYPE html>
<html lang="en">
<head>

  <title>Metis</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.4/semantic.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/custom.css">
  <link rel="stylesheet" type="text/css" href="/css/login.css">
  <link rel="stylesheet" type="text/css" href="/css/postpage.css">
  
  <script src="login.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body>

  <% include navbar %>

  <% include login %>
  
  <div class="container">    

    <div class="row"> 
      <div class="col-sm-10">
      <!-- this part is for the question the user asked  -->
        <div class="row">
          <div class="col-sm-12">
            <div class="panel panel-default text-left">
              <div class="panel-body">

                <p style="float:right;" id="timestamp" class="pull-right"> Posted on <%= post.timePosted %> </p>

                <p id="title" contenteditable="false"><strong><%= post.author.username %> asked: <%= post.title %></strong></p>
                      
                <p id="description" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"><%= post.description %></p>
                    
                <% if (currentUser && post.author.id.equals(currentUser._id)){ %>
                  <!-- for delete  -->
                  <form id="delete-form" action="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>/?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger" style="float:right;">Delete</button>
                  </form>
                  <!-- for edit  -->
                  <a class="btn btn-xs btn-warning" style="float:right; margin-right:2px;" href="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>/edit">Edit</a>
                
                <% } %>
                              
                <div class="ui labeled button" tabindex="0">
                  <% if(user !== null){ %>
                    <a href="/post/<%= post._id %>/user/<%= user._id %>/<%= post.title %>/comments/like" class="ui green button">
                  <% } else{ %>
                    <a href="#" class="ui green button">
                  <% } %>
                    <i class="thumbs up icon"></i> Like
                    </a>
                  
                  <% if(user !== null){ %>
                    <a href="/post/<%= post._id %>/user/<%= user._id %>/<%= post.title %>/comments/like" class="ui basic green left pointing label">
                    <% } else{ %>
                    <a href="#" id="nonUser" class="ui basic green left pointing label">
                    <% } %>
                    <%= post.like %>
                    </a>
                </div>
                
                <div class="ui labeled button" tabindex="0">
                  <% if(user !== null){ %>
                  <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/dislike" class="ui red button">
                    <% } else{ %>
                  <a href="#" id="nonUser" class="ui red button">
                    <% } %>
                    <i class="thumbs down icon"></i> Dislike
                  </a>
                  <% if(user !== null){ %>
                  <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/dislike" class="ui basic red left pointing label">
                    <% } else{ %>
                  <a href="#" id="nonUser" class="ui basic red left pointing label">
                    <% } %>
                    <%= post.dislike %>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
          


        
        <!--this part is for best answer -->
        <% post.comments.forEach(function(comment){ %>
          <!-- loop once to check if best answer exist -->
        <% if (comment.bestAnswer==true){%>
          <div class="well">
            
            <span class="pull-right"><%= comment.timePosted %></span>
            <p><strong><%= comment.author.username %></strong></p>
              
            <p id="comments"><img src="https://imgur.com/TKhzibE.png" alt="best answer" height="20" width="20" style = "margin-top: -5px"> <strong> Best Answer: </strong><%= comment.text %></p>
          
            <div class="ui labeled button" tabindex="0">
              <% if(user !== null){ %>
                <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui green button">
              <% } else{ %>
                <a href="#" id="nonUser" class="ui green button">
              <% } %>
                <i class="thumbs up icon"></i> Like
                </a>
              
              <% if(user !== null){ %>
                <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui basic green left pointing label">
              <% } else{ %>
                <a href="#" id="nonUser" class="ui basic green left pointing label">
              <% } %>
                <%= comment.like %>
                </a>
            
            </div>
            
            <div class="ui labeled button" tabindex="0">
              <% if(user !== null){ %>
                <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui red button">
              <% } else{ %>
                <a href="#" class="ui red button">
              <% } %>  
                <i class="thumbs down icon"></i> Dislike
                </a>
              
              <% if(user !== null){ %>
                <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui basic red left pointing label">
              <% } else{ %>
                <a href="#" class="ui basic red left pointing label">
              <% } %>
              <%= comment.dislike %>
                </a>
              
              <!-- show only if user owns the post -->
              <% if (currentUser && post.author.id.equals(currentUser._id)){ %>
                <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/bestanswer" class="ui green button">
                  Cancel Best Answer
                </a>
              <% } %>
            
            </div>

          </div>
        <% } %>
        <%})%>
  
          <div class="well">
            <% post.comments.forEach(function(comment){ %>
              <div class="row">
                <div class="col-md-12">
                    
                <% if(comment.bestAnswer!=true){ %>
                <% if(comment.helpful != true){ %>
                  <div id="notHelpful">
                    <span class="pull-right"><%= comment.timePosted %></span>
                    <p><strong><%= comment.author.username %></strong></p>
                    <p id="comments"><%= comment.text %></p>
                          

                            
                    <div class="ui labeled button" tabindex="0">
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui green button">
                      <% } else{ %>
                        <a href="#" class="ui green button">
                      <% } %>
                        <i class="thumbs up icon"></i> Like
                        </a>
                      
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui basic green left pointing label">
                      <% } else{ %>
                        <a href="#" class="ui basic green left pointing label">
                      <% } %>
                      <%= comment.like %>
                        </a>
                    </div>
                    <div class="ui labeled button" tabindex="0">
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui red button">
                      <% } else{ %>
                        <a href="#" class="ui red button">
                      <% } %>  
                        <i class="thumbs down icon"></i> Dislike
                        </a>
                      
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui basic red left pointing label">
                      <% } else{ %>
                        <a href="#" class="ui basic red left pointing label">
                      <% } %>
                      <%= comment.dislike %>
                        </a>

                      <!-- show only if user owns th post -->
                      <% if (currentUser && post.author.id.equals(currentUser._id)){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/bestanswer" class="ui green button">
                          Set As Best Answer
                        </a>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/nothelpful">not helpful</a>
                      <% } %>
                      </div>

                      <% if (currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <form action="/post/<%= post._id %>/user/<%=  post.author.id  %>/<%= post.title %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                          <button class="btn btn-xs btn-danger" style="float:right;">Delete</button>
                        </form>
                        
                        <form action="/post/<%= post._id %>/user/<%=  post.author.id  %>/<%= post.title %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                          <div>
                            <label style = "font-size: 18px;">Comment</label>
                            <textarea class="form-control input-md" rows="4" name="comment"><%= comment.text %></textarea>
                          </div>
                          <br>
                          <button type="submit" value="submit" class="submit-post btn btn-primary">Submit</button>
                        </form>
                        <% } %>
                      <hr>
                  </div>

                  <% } else{ %>
                  <span class="pull-right"><%= comment.timePosted %></span>
                  <p><strong><%= comment.author.username %></strong></p>
                  <p id="comments"><%= comment.text %></p>
                
                  <div class="ui labeled button" tabindex="0">
                    <% if(user !== null){ %>
                      <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui green button">
                    <% } else{ %>
                      <a href="#" class="ui green button">
                    <% } %>
                      <i class="thumbs up icon"></i> Like
                      </a>
                    
                    <% if(user !== null){ %>
                      <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/like" class="ui basic green left pointing label">
                    <% } else{ %>
                      <a href="#" class="ui basic green left pointing label">
                    <% } %>
                    <%= comment.like %>
                      </a>
                    </div>
                    
                    <div class="ui labeled button" tabindex="0">
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui red button">
                      <% } else{ %>
                        <a href="#" class="ui red button">
                      <% } %>  
                      <i class="thumbs down icon"></i> Dislike
                        </a>
                      <% if(user !== null){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/dislike" class="ui basic red left pointing label">
                      <% } else{ %>
                        <a href="#" class="ui basic red left pointing label">
                      <% } %>
                      <%= comment.dislike %>
                        </a>


                      <!-- show only if user owns the post -->
                      <% if (currentUser && post.author.id.equals(currentUser._id)){ %>
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/bestanswer" class="ui green button">
                          Set As Best Answer
                        </a>
                     
                        <a href="/post/<%= post._id %>/user/<%=  user._id  %>/<%= post.title %>/comments/<%= comment._id %>/nothelpful">not helpful</a>
                        <% } %>
                      </div>
                      
                      <% if (currentUser && comment.author.id.equals(currentUser._id)){ %>
                      <form action="/post/<%= post._id %>/user/<%=  post.author.id  %>/<%= post.title %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger" style="float:right;">Delete</button>
                      </form>
                      
                      <!-- <button onclick="hideAndSeek()">Edit </button>  -->
                        <!-- <div id="edit"> -->
                          <form action="/post/<%= post._id %>/user/<%=  post.author.id  %>/<%= post.title %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                            <div>
                              <label style = "font-size: 10px;">Edit Comment</label>
                              <textarea class="form-control input-md" rows="4" name="comment"><%= comment.text %></textarea>
                            </div>
                            <br>
                            <button type="submit" value="submit" class="submit-post btn btn-primary">Submit</button>
                          </form>
                        <!-- </div> -->
                        <% } %>
                          
                        
                    <hr>
                  <% } %>
                 <% } %>
                </div>
              </div>   
            <% }) %>
            
            <!-- Add new comment section -->

            <label for="addComment">Add New Comment to: <h4 class="wraptxt"><%= post.title%></h4></label>
           

            <form action="/post/<%= post._id %>/user/<%= post.author.id %>/<%= post.title %>/comments" method="POST">
              <% if(user !== null){ %>  
              <div class="form-group">
                <textarea class="form-control" rows="4" name="comment[text]" placeholder="Type Here"></textarea>
              </div>
                
                <div class="form-group">
                    <button class="btn btn-md btn-info btn-block">Submit! </button>
                </div>
              <% } else{ %>
                  <div class="form-group">
                    <textarea class="form-control" rows="4" name="comment[text]" placeholder="Type Here" disabled></textarea>
                  </div>
                  <div class="alert alert-danger">
                    <strong>You need to register or login to be able to post comments.</strong>
                  </div> 
              <% } %> 
            </form>
                
          </div>

    </div>  
    </div>
   </div>
  </div>  

  <% include footer %>

  <script>
      function hideAndSeek() {
          var x = document.getElementById("edit");
          if (x.style.display === "none") {
              x.style.display = "block";
          } else {
              x.style.display = "none";
          }
      }
      </script>

  </body>
</html>
