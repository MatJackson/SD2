<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/custom.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <style>    
    /* Set black background color, white text and some padding */

    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
  </style>
</head>

<body>

<% include navbar %>

<% include login %>
  
<div class="container text-center">    
  <div class="row"> 
    <!-- <% include leftsidebar %> -->
    <div class="col-sm-10"> 
        <div class="row">
            <div class="col-sm-12">
              <div class="panel panel-default text-left">
                <div class="panel-body">
                    <p id="title" contenteditable="false"><%= userName %> asks: <%= title %></p>
                    <p id="timestamp"> Posted on <%= timestamp %> </p>
                    <p id="description" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"><%= description %></p>
                </div>
              </div>
            </div>

            <div class="well">
              <!-- post.title to work need to edit post route -->
                    <h1>Add New Comment to <%= post.title %> </h1>
    
                    <form action="/posts/<%= post._id %>/comments" method="POST">
                        <div class="form-group">
                            <!-- following line will be changed to textarea -->
                            <input class="form-control" type="text" name="comment[text]" placeholder="text">
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-sm btn-default btn-block">Submit! </button>
                        </div>
                    </form>
                
                <hr>
                <!-- for the following codes to work, need to edit post route -->
                <% post.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right"><%= comment.timePosted %></span>
                                <p><%= comment.text %></p>
                        </div>
                    </div>
                    
                <% }) %>
                
            </div>


          </div>
    </div>
    <div class="col-sm-2 well"> 

      <% include rightsidebar %>
      
    </div>
  </div>
</div>

<% include footer %>

</body>


</html>

